<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/default.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Styles", required: false)
    <style>
        body, input, button, select, textarea {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
            Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif !important;
            font-size: 16px;
            line-height: 1.5;
            color: #222;
        }
    </style>
</head>
<body>
<header>
</header>
<main>
    <div class="journey-banner">
        <div class="journey-header">
            <a asp-controller="Home" asp-action="Index"
               class="back-button @(ViewData["ShowJourneyInfo"] as bool? != true ? "invisible" : "")">‚Üê</a>

            <div class="journey-info">
                @if (ViewData["ShowJourneyInfo"] as bool? == true)
                {
                    <span>@ViewData["OriginName"]</span>
                    <span class="dash">-></span>
                    <span>@ViewData["DestinationName"]</span>
                }
                else
                {
                    <span>&nbsp;</span>
                }
            </div>
        </div>
        <div class="journey-date">@ViewData["FormattedDate"]</div>
    </div>

    @RenderBody()
</main>
<footer>
</footer>
    @RenderSection("Scripts", required: false)
</body>
</html>

